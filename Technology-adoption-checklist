<script>
    function toggleCheck(element) {
        element.classList.toggle('checked');
        updateProgress();
        saveState();
    }
    
    function updateProgress() {
        const checkboxes = document.querySelectorAll('.checkbox');
        const checked = document.querySelectorAll('.checkbox.checked');
        const percentage = (checked.length / checkboxes.length) * 100;
        document.getElementById('progressBar').style.width = percentage + '%';
    }
    
    function resetChecklist() {
        if (confirm('Reset all checkboxes? This cannot be undone.')) {
            document.querySelectorAll('.checkbox').forEach(cb => {
                cb.classList.remove('checked');
            });
            updateProgress();
            saveState();
        }
    }
    
    function checkAll() {
        document.querySelectorAll('.checkbox').forEach(cb => {
            cb.classList.add('checked');
        });
        updateProgress();
        saveState();
    }
    
    function saveState() {
        const states = [];
        document.querySelectorAll('.checkbox').forEach(cb => {
            states.push(cb.classList.contains('checked'));
        });
        localStorage.setItem('checklistState', JSON.stringify(states));
    }
    
    function loadState() {
        const saved = localStorage.getItem('checklistState');
        if (saved) {
            const states = JSON.parse(saved);
            const checkboxes = document.querySelectorAll('.checkbox');
            states.forEach((checked, index) => {
                if (checked && checkboxes[index]) {
                    checkboxes[index].classList.add('checked');
                }
            });
            updateProgress();
        }
    }
    
    // Load saved state on page load
    loadState();
</script>
